<Window x:Class="BlogApp.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlogApp.WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Pick an option" Margin="5" HorizontalContentAlignment="Center"/>
            <ComboBox Margin="10" x:Name="cb_windowselector">
                <ComboBoxItem Content="Blog" IsSelected="True"/>
                <ComboBoxItem Content="Post"/>
                <ComboBoxItem Content="Comment"/>
                <ComboBoxItem Content="Stats"/>
            </ComboBox>
            <Button Content="Open" Margin="50, 10" Click="Button_OpenSelectedWindow"/>
        </StackPanel>
    </Grid>
</Window>
